<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/HeightWrapContent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_columnAvatar"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@null"
        android:src="@drawable/ic_default" />

    <LinearLayout
        style="@style/HeightWrapContent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_columnTitle"
            style="@style/HeightWrapContent"
            android:text="自闭症"
            android:textColor="@color/black_text"
            android:textSize="@dimen/c_text_size" />

        <TextView
            android:id="@+id/tv_item_columneDscription"
            style="@style/HeightWrapContent"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="3"
            android:text="自闭症自闭症自闭症自闭症自闭症自闭症症闭症自闭症"
            android:textColor="@color/tab_title_normal_color"
            android:textSize="@dimen/b_text_size" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
           >

            <TextView
                android:id="@+id/tv_item_columnFollowersCount"
                style="@style/DoubleWrapContent"
                android:layout_alignParentLeft="true"
                android:text="6999人关注"
                android:textColor="@color/normal_color"
                android:textSize="@dimen/b_text_size" />

            <TextView
                android:id="@+id/tv_item_columnPostsCount"
                style="@style/DoubleWrapContent"
                android:layout_alignParentRight="true"
                android:text="19篇文章"
                android:textColor="@color/normal_color"
                android:textSize="@dimen/b_text_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
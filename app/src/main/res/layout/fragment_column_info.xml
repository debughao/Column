<com.debughao.column.widget.view.YCanScrollview
    style="@style/DoubleMatchParent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        style="@style/ColumnInfofragmentTitle"
        android:text="关于" />

    <LinearLayout
        android:layout_height="85dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.debughao.column.widget.view.CircleImageView
            android:id="@+id/iv_columnDetailAvatar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_default"
            app:civ_border_color="@color/twenty_write"
            app:civ_border_width="2dp" />

        <LinearLayout
            style="@style/DoubleMatchParent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_columnDetailtitle"
                style="@style/DoubleWrapContent"
                android:layout_marginTop="2dp"
                android:textColor="@color/black_text"
                android:textSize="@dimen/b_text_size"  />

            <TextView
                android:id="@+id/tv_fragment_columnDscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:textColor="@color/tab_title_normal_color"
                android:textSize="@dimen/b_text_size" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/ColumnInfofragmentTitle"
        android:text="专栏话题" />

    <com.debughao.column.widget.view.ZHTopicView
        android:id="@+id/zhv_columnDetailTopic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        style="@style/ColumnInfofragmentTitle"
        android:text="专栏介绍" />

    <TextView
        android:id="@+id/tv_fragment_columnIntroduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/tab_title_normal_color"
        android:textSize="@dimen/b_text_size" />

    <TextView
        style="@style/ColumnInfofragmentTitle"
        android:text="编辑 " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.debughao.column.widget.view.CircleImageView
            android:id="@+id/iv_columnEditorsAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_default"
            app:civ_border_color="@color/twenty_write"
            app:civ_border_width="2dp" />

        <LinearLayout
            style="@style/DoubleMatchParent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_columnEditorsName"
                    style="@style/DoubleWrapContent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/b_text_size" />

                <TextView
                  android:layout_toRightOf="@id/tv_columnEditorsName"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/tv_columnEditorsInfo"
                    style="@style/HeightWrapContent"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/tab_title_normal_color"
                    android:textSize="@dimen/b_text_size"

                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_fragment_columnEditorsPostsNum"
                style="@style/HeightWrapContent"
                android:layout_marginTop="2dp"
                android:textColor="@color/tab_title_normal_color"
                android:textSize="@dimen/b_text_size"

                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</com.debughao.column.widget.view.YCanScrollview>